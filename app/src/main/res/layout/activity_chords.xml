<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00001a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joshuayuan.eartraining.ChordsActivity">

    <com.joshuayuan.eartraining.TextView1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Playing chord..."
        android:id="@+id/chInstructions"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignLeft="@+id/linearLayout7"
        android:layout_alignStart="@+id/linearLayout7" />

    <com.joshuayuan.eartraining.TextView1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_the_chord_you_hear"
        android:id="@+id/chords"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <com.joshuayuan.eartraining.TextView2
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score_value"
        android:id="@+id/chordScore"
        android:textSize="100sp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.joshuayuan.eartraining.Button1
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/replay"
        android:id="@+id/replay"
        android:layout_above="@+id/chordScore"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:onClick="replayChord"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/chords"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearLayout4">

        <com.joshuayuan.eartraining.Button1 android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="Major"
            android:id="@+id/major"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:onClick="cpart1Clicked"
            android:enabled="false"
            android:background="@drawable/custom_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" />

        <com.joshuayuan.eartraining.Button1 android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="Minor"
            android:id="@+id/minor"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:onClick="cpart1Clicked"
            android:enabled="false"
            android:background="@drawable/custom_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout4">

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="Dom 7"
            android:id="@+id/dom7"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:onClick="cpart1Clicked"
            android:enabled="false"
            android:background="@drawable/custom_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" />

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="Dim 7"
            android:id="@+id/dim7"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:onClick="cpart2Clicked"
            android:enabled="false"
            android:background="@drawable/custom_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignLeft="@+id/linearLayout5"
        android:layout_alignStart="@+id/linearLayout5"
        android:id="@+id/linearLayout6">

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="Root Pos"
            android:id="@+id/root"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:onClick="cpart2Clicked"
            android:enabled="false"
            android:background="@drawable/custom_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" />

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="1st Inv"
            android:id="@+id/first"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:onClick="cpart2Clicked"
            android:enabled="false"
            android:background="@drawable/custom_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout7"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="2nd Inv"
            android:id="@+id/second"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:onClick="cpart2Clicked"
            android:enabled="false"
            android:background="@drawable/custom_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" />

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="3rd Inv"
            android:id="@+id/third"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:onClick="cpart2Clicked"
            android:enabled="false"
            android:background="@drawable/custom_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" />
    </LinearLayout>

</RelativeLayout>
