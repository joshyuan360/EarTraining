<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joshuayuan.eartraining.MainActivity"
    android:background="@drawable/bk3">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/intervals"
        android:id="@+id/intervals"
        android:onClick="openIntervals"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/chords"
        android:layout_alignEnd="@+id/chords"
        android:background="#7b00f2ff"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/chords"
        android:id="@+id/chords"
        android:layout_below="@+id/intervals"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="openChords"
        android:background="#7b00f2ff"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/cadences"
        android:id="@+id/cadences"
        android:layout_below="@+id/chords"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="openCadences"
        android:background="#7b00f2ff"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/high_scores"
        android:id="@+id/hsButton"
        android:onClick="openHighScores"
        android:layout_below="@+id/cadences"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/cadences"
        android:layout_alignEnd="@+id/cadences"
        android:background="#7b00f2ff"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ear_training"
        android:id="@+id/textView"
        android:textSize="50sp"
        android:textColor="#bbffffff"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/version_1_0"
        android:id="@+id/version"
        android:layout_below="@+id/hsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:paddingTop="10dp" />


</RelativeLayout>
