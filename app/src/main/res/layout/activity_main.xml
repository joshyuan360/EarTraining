<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joshuayuan.eartraining.MainActivity"
    android:background="@drawable/bk6">

    <com.joshuayuan.eartraining.userinterface.MenuButton
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/intervals_menu"
        android:id="@+id/intervals"
        android:onClick="openIntervals"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />

    <com.joshuayuan.eartraining.userinterface.MenuButton
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/chords_menu"
        android:id="@+id/chords"
        android:layout_below="@+id/intervals"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="openChords"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />

    <com.joshuayuan.eartraining.userinterface.MenuButton
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/cadences_menu"
        android:id="@+id/cadences"
        android:layout_below="@+id/chords"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="openCadences"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />

    <com.joshuayuan.eartraining.userinterface.MenuButton
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/chord_progressions_menu"
        android:id="@+id/chordprogression"
        android:layout_below="@+id/cadences"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="openChordProgressions"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />

    <com.joshuayuan.eartraining.userinterface.MenuButton
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/high_scores_menu"
        android:id="@+id/hsButton"
        android:onClick="openHighScores"
        android:layout_below="@+id/chordprogression"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />

    <com.joshuayuan.eartraining.userinterface.MenuButton
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/settings_menu"
        android:id="@+id/settings"
        android:layout_below="@+id/hsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="openSettings"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />

    <com.joshuayuan.eartraining.userinterface.InstructionTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ear_training_title"
        android:id="@+id/title"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_alignParentTop="true"
        android:shadowColor="#ffffff"
        android:background="#a9000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_marginBottom="10dp" />
</RelativeLayout>
