<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00001a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joshuayuan.eartraining.CadencesActivity">

    <com.joshuayuan.eartraining.TextView1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_the_cadence_you_hear"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:paddingTop="10dp" />

    <com.joshuayuan.eartraining.Button1
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/perfect1"
        android:id="@+id/perfect"
        android:onClick="answerClicked"
        android:enabled="false"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/plagal"
        android:layout_alignEnd="@+id/plagal"
        android:textSize="10sp"
        android:background="#7b00f2ff"
        android:layout_marginTop="10dp" />

    <com.joshuayuan.eartraining.Button1
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/plagal"
        android:id="@+id/plagal"
        android:layout_below="@+id/perfect"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="answerClicked"
        android:enabled="false"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:background="#7b00f2ff"
        android:layout_marginTop="10dp" />

    <com.joshuayuan.eartraining.Button1
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/imperfect"
        android:id="@+id/imperfect"
        android:layout_below="@+id/plagal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="answerClicked"
        android:enabled="false"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:background="#7b00f2ff"
        android:layout_marginTop="10dp" />

    <com.joshuayuan.eartraining.Button1
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/deceptive"
        android:id="@+id/deceptive"
        android:layout_below="@+id/imperfect"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="answerClicked"
        android:enabled="false"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:background="#7b00f2ff"
        android:layout_marginTop="10dp" />

    <com.joshuayuan.eartraining.TextView1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/playing_sound"
        android:id="@+id/cadenceText"
        android:textColor="#ffffff"
        android:layout_below="@+id/deceptive"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp" />

    <com.joshuayuan.eartraining.TextView1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/_0"
        android:id="@+id/cadenceScore"
        android:textColor="#ffffff"
        android:textSize="100sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.joshuayuan.eartraining.Button1
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/replay"
        android:id="@+id/replay"
        android:enabled="false"
        android:onClick="replayCadence"
        android:textColor="#ffffff"
        android:background="#7b00f2ff"
        android:layout_above="@+id/cadenceScore"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
