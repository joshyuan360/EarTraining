<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joshuayuan.eartraining.activity.IntervalsActivity">

    <com.joshuayuan.eartraining.presentation.InstructionTextView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:text="@string/playing_interval"
        android:id="@+id/insDisplay"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <com.joshuayuan.eartraining.presentation.ReplayButton
        android:id="@+id/replay"
        android:layout_width="43dp"
        android:layout_height="50dp"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:onClick="replayInterval"
        android:text="@string/replay_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/insDisplay"
        android:id="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/perfect"
            android:id="@+id/perfect"
            android:onClick="part1Clicked"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:enabled="false" />
        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/major"
            android:id="@+id/major"
            android:onClick="part1Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />
        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/minor"
            android:id="@+id/minor"
            android:onClick="part1Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />
        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/aug"
            android:id="@+id/aug"
            android:onClick="part1Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:enabled="false" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d1cbc4"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/line"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/unison"
            android:id="@+id/unison"
            android:onClick="part2Clicked"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/second"
            android:id="@+id/second"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/third"
            android:id="@+id/third"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/fourth"
            android:id="@+id/fourth"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/fifth"
            android:id="@+id/fifth"
            android:onClick="part2Clicked"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/sixth"
            android:id="@+id/sixth"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/seventh"
            android:id="@+id/seventh"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/octave"
            android:id="@+id/octave"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/ninth"
            android:id="@+id/ninth"
            android:onClick="part2Clicked"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/tenth"
            android:id="@+id/tenth"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/eleventh"
            android:id="@+id/eleventh"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/twelfth"
            android:id="@+id/twelfth"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout8"
        android:layout_above="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.presentation.InstructionTextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/score"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:gravity="end"/>

        <com.joshuayuan.eartraining.presentation.InstructionTextView
            android:id="@+id/intervalScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@string/score_value"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <com.joshuayuan.eartraining.presentation.InstructionTextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/high_scores"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <com.joshuayuan.eartraining.presentation.InstructionTextView
            android:id="@+id/intervalHighScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@string/score_value"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>
