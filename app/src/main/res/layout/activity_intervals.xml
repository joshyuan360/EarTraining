<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/equalizer_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joshuayuan.eartraining.activity.IntervalsActivity">

    <com.joshuayuan.eartraining.presentation.InstructionTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_interval"
        android:id="@+id/intervalmessage"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.joshuayuan.eartraining.presentation.InstructionTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/playing_interval"
        android:id="@+id/insDisplay"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:layout_below="@+id/linearLayout4" />

    <com.joshuayuan.eartraining.presentation.HighScoreTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score_value"
        android:id="@+id/chordProgressionScore"
        android:textSize="100sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <com.joshuayuan.eartraining.presentation.AnswerButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/replay_button"
        android:id="@+id/replay"
        android:layout_above="@+id/chordProgressionScore"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:onClick="replayInterval" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/intervalmessage"
        android:id="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/perfect"
            android:id="@+id/perfect"
            android:onClick="part1Clicked"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:enabled="false" />
        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/major"
            android:id="@+id/major"
            android:onClick="part1Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />
        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/minor"
            android:id="@+id/minor"
            android:onClick="part1Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />
        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/aug"
            android:id="@+id/aug"
            android:onClick="part1Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/unison"
            android:id="@+id/unison"
            android:onClick="part2Clicked"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/second"
            android:id="@+id/second"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/third"
            android:id="@+id/third"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/fourth"
            android:id="@+id/fourth"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/fifth"
            android:id="@+id/fifth"
            android:onClick="part2Clicked"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/sixth"
            android:id="@+id/sixth"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/seventh"
            android:id="@+id/seventh"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/octave"
            android:id="@+id/octave"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/ninth"
            android:id="@+id/ninth"
            android:onClick="part2Clicked"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/tenth"
            android:id="@+id/tenth"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/eleventh"
            android:id="@+id/eleventh"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.presentation.AnswerButton
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/twelfth"
            android:id="@+id/twelfth"
            android:onClick="part2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:enabled="false" />
    </LinearLayout>

</RelativeLayout>
