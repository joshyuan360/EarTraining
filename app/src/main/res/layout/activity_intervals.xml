<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00001a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joshuayuan.eartraining.IntervalsActivity">

    <com.joshuayuan.eartraining.TextView1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_the_interval_you_hear"
        android:id="@+id/intervalmessage"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.joshuayuan.eartraining.TextView1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Identify the interval..."
        android:id="@+id/insDisplay"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:layout_below="@+id/linearLayout3" />

    <com.joshuayuan.eartraining.TextView2
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score_value"
        android:id="@+id/chordScore"
        android:textSize="100sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <com.joshuayuan.eartraining.Button1
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/replay"
        android:id="@+id/replay"
        android:layout_above="@+id/chordScore"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:onClick="replayInterval"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/intervalmessage"
        android:id="@+id/linearLayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.Button1 android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="Perfect"
            android:id="@+id/perfect"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:onClick="part1Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />
        <com.joshuayuan.eartraining.Button1 android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="Major"
            android:id="@+id/major"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:onClick="part1Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />
        <com.joshuayuan.eartraining.Button1 android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="Minor"
            android:id="@+id/minor"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:onClick="part1Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />
        <com.joshuayuan.eartraining.Button1 android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="Tritone"
            android:id="@+id/tritone"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:onClick="part2Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/unison"
            android:id="@+id/unison"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:onClick="part2Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/second"
            android:id="@+id/second"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:onClick="part2Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/third"
            android:id="@+id/third"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:onClick="part2Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="@string/fourth"
            android:id="@+id/fourth"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:onClick="part2Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="Fifth"
            android:id="@+id/fifth"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:onClick="part2Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="Sixth"
            android:id="@+id/sixth"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:onClick="part2Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="Seventh"
            android:id="@+id/seventh"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:onClick="part2Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />

        <com.joshuayuan.eartraining.Button1
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="Octave"
            android:id="@+id/octave"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:onClick="part2Clicked"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:enabled="false" />
    </LinearLayout>

</RelativeLayout>
